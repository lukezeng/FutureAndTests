@model string
<html data-ng-app="restaurantApp">
<head>
    <meta charset="utf-8" />

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
@*    @Styles.Render("~/Content/css")*@
    <link rel="stylesheet" href="~/Content/normalize.css"/>
    <link rel="stylesheet/less" type="text/css" href="@Url.Content("~/Content/Styleguide/colors.less")" />
    <script src="http://code.jquery.com/jquery-2.1.1.js"></script><!-- Latest compiled and minified JavaScript -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"><!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css"><!-- Optional theme -->
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script><!-- Latest compiled and minified JavaScript -->
    <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.js"></script><!-- Latest compiled and minified JavaScript -->


    @Scripts.Render("~/Scripts/less.min.js")
    @Scripts.Render("https://ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular.js")
    @Scripts.Render("https://ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular-animate.js")
    @Scripts.Render("https://ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular-cookies.js")
    @Scripts.Render("https://ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular-resource.js")
    @Scripts.Render("https://ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular-route.js")
    @Scripts.Render("https://ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular-sanitize.js")

    @* Customized *@
    @Styles.Render("~/Content/responsive.css")
    @Styles.Render("~/Content/Angular/animation.css")
    @Scripts.Render("~/Scripts/Angular/app.js")
    @Scripts.Render("~/Scripts/Angular/Controllers.js")
    @Scripts.Render("~/Scripts/Angular/factories.js")
    @Scripts.Render("~/Scripts/Angular/filters.js")
    @Scripts.Render("~/Scripts/Angular/directives.js")
    @Scripts.Render("~/Scripts/Angular/ui-bootstrap-tpls-0.11.0.js")
    @Scripts.Render("~/Scripts/jquery.cookie.js")



    @RenderSection("header", required: false)
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <!-- Bootstrap CSS fixes for IE6 -->
    <!--[if lt IE 7]><link rel="stylesheet" href="/Content/FileUpload/css/bootstrap/bootstrap-ie6.debug.css"><![endif]-->

    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title"><a href="/#/">Your Logo here</a></p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul class="nav nav-pills" data-ng-controller="navigationCtrl as navCtrl">
                        <li data-ng-class="{active:isActive('/')}"><a href="/#/">Professional</a></li>
                        <li data-ng-class="{active:isActive('/topCompanies')}"><a href="/#/topCompanies">My Dreams</a></li>
                        <!--<li data-ng-class="{active:isActive('/angualrExamples')}"><a href="/#/angualrExamples">Examples</a></li>-->
                        <li data-ng-class="{active:isActive('/contactUs')}"><a href="/#/contactUs">Contact Us</a></li>
                        @{
                            if (Request.Cookies["UserName"] != null)
                            {     <li>@Html.ActionLink("My Profile", "MyProfile", "Home")</li>  }
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body" class="container">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year -  ViFuturen Inc.</p>
            </div>
        </div>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>

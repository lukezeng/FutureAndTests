@{
    ViewBag.Title = "Contact";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

<section class="contact">
    <header>
        <h3>Phone</h3>
    </header>
    <p>
        <span class="label">Main:</span>
        <span>@ViewBag.MainPhone</span>
    </p>
    <p>
        <span class="label">After Hours:</span>
        <span>@ViewBag.AfterHourPhone</span>
    </p>
</section>

<section class="contact">
    <header>
        <h3>Email</h3>
    </header>
    <p>
        <span class="label">Support:</span>
        <span><a href="mailto:@ViewBag.SupportEmail">@ViewBag.SupportEmail</a></span>
    </p>
    <p>
        <span class="label">Marketing:</span>
        <span><a href="mailto:@ViewBag.MarketingEmail">@ViewBag.MarketingEmail</a></span>
    </p>
    <p>
        <span class="label">General:</span>
        <span><a href="mailto:@ViewBag.GeneralEmail">@ViewBag.GeneralEmail</a></span>
    </p>
</section>

<section class="contact">
    <header>
        <h3>Address</h3>
    </header>
    <p>
        @ViewBag.AddressSt<br />
        @ViewBag.AddressCity, @ViewBag.AddressState @ViewBag.AddressZipCode
    </p>
</section>